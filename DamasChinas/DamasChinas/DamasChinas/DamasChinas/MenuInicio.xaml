<Window x:Name="Menú" x:Class="DamasChinas.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DamasChinas"
        mc:Ignorable="d"
        Title="Menú principal" Height="322.356" Width="438.462">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="86*"/>
            <ColumnDefinition Width="91*"/>
            <ColumnDefinition Width="254*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="Bienvenido" HorizontalAlignment="Left" Margin="26,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" RenderTransformOrigin="-0.456,-1.03"><Run Text="Bienvenido"/><LineBreak/><Run/></TextBlock>
        <Button x:Name="IniciarPartida" Grid.ColumnSpan="2" Content="Iniciar partida" HorizontalAlignment="Left" Margin="26,104,0,0" VerticalAlignment="Top" Width="85" RenderTransformOrigin="0.125,-0.071"/>
        <Button x:Name="Tutorial" Content="Tutorial" Grid.Column="1" HorizontalAlignment="Left" Margin="62.6,153,0,0" VerticalAlignment="Top" Width="75" Grid.ColumnSpan="2"/>
        <Button x:Name="Puntajes" Content="Mejores puntajes" Grid.Column="2" HorizontalAlignment="Left" Margin="121.371,104,0,0" VerticalAlignment="Top" Width="94"/>
        <Button x:Name="BuscarPartida" Grid.ColumnSpan="2" Content="Buscar partida" HorizontalAlignment="Left" Margin="26,153,0,0" VerticalAlignment="Top" Width="85"/>
        <Button x:Name="Historial" Content="Historial de partidas" Grid.Column="1" HorizontalAlignment="Left" Margin="62.6,104,0,0" VerticalAlignment="Top" Width="126" Click="Button_Click" Height="19" Grid.ColumnSpan="2"/>
        <Button x:Name="CerrarSesion" Content="Cerrar sesión" Grid.Column="2" HorizontalAlignment="Left" Margin="121.371,153,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBlock x:Name="Idioma" HorizontalAlignment="Left" Margin="26,228,0,0" TextWrapping="Wrap" Text="Idioma" VerticalAlignment="Top"/>
        <TextBlock x:Name="Esp" HorizontalAlignment="Left" Margin="25,261,0,0" TextWrapping="Wrap" Text="es MX" VerticalAlignment="Top" MouseDown="Esp_MouseDown"/>
        <TextBlock x:Name="Eng" HorizontalAlignment="Left" Margin="86,261,0,0" TextWrapping="Wrap" Text="en US" VerticalAlignment="Top" Grid.ColumnSpan="2" MouseDown="Eng_MouseDown"/>

    </Grid>
</Window>
